//  Модальное окно Заказать звонок  
.modal.lity-hide#modal-call
	.modal__wrap
		button.close.modal__close(type="button" data-lity-close aria-label="Close")
			svg(role="img" aria-hidden="true" focusable="false")
				use(xlink:href="img/svg/sprite.svg#close")
		.modal__content
			h3.modal__desc Заказать звонок
			form.form(action="send.php" method="post" autocomplete="off")
				.form__box-input
					input.form__input(type="text" name="name" placeholder="Ваше имя")
				.form__box-input
					input.form__input(type="email" name="email" placeholder="Ваш email*" title="youre@email.com" required)
				.form__box-input
					input.form__input(type="tel" name="phone" placeholder="Ваш телефон*" title="89012345678" pattern="^[0-9\\s\\(\\)\\+\\-]{1,18}$" required)
				.form__box-submit
					button.btn1.form__submit(type="submit" name="submit") Отправить
					input(type="hidden" name="title" value="Заказать звонок")
					input(type="hidden" name="orderfk" value="")
				.form__box-checkbox
					label.form__label-checkbox
						input.form__checkbox(type="checkbox" name="agree" checked)
						span.form__checker
						|  Отправляя заявку вы соглашаетесь с 
						a.form__policy(href="#") Политикой конфиденциальности
//  /Модальное окно Заказать звонок  


